<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btProfessor"
        android:text="Professor"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp"
        />

    <Button
        android:id="@+id/btAluno"
        android:text="Aluno"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="47dp"
        android:layout_alignTop="@+id/btProfessor"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/btConexao"
        android:text="Conexao"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/btRelatorio"
        android:layout_alignStart="@+id/btProfessor" />

    <Button
        android:id="@+id/btRelatorio"
        android:text="Relatorio"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btAluno"
        android:layout_alignStart="@+id/btAluno" />

</RelativeLayout>
